<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCirculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="142dp"
        android:text="Calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCuadrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="35dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTriangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="195dp"
        android:text="Calcular"
        app:layout_constraintBottom_toTopOf="@+id/btnCirculo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCuadrado" />

    <TextView
        android:id="@+id/txtTriangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="21dp"
        android:text="Triangulo"
        app:layout_constraintBottom_toTopOf="@+id/edtBaseTriangulo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtCuadrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="84dp"
        android:text="Cuadrado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtCirculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="154dp"
        android:text="Circulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtLadoCuadrado"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="text"
        android:text="Lado"
        app:layout_constraintStart_toStartOf="@+id/txtCuadrado"
        app:layout_constraintTop_toBottomOf="@+id/txtCuadrado" />

    <EditText
        android:id="@+id/edtBaseTriangulo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="text"
        android:text="Base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edtAlturaTriangulo"
        app:layout_constraintStart_toStartOf="@+id/edtAlturaTriangulo"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtAlturaTriangulo"
        android:layout_width="131dp"
        android:layout_height="41dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="85dp"
        android:ems="10"
        android:inputType="text"
        android:text="Altura"
        app:layout_constraintBottom_toTopOf="@+id/btnCirculo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTriangulo" />

    <EditText
        android:id="@+id/edtRadioCirculo"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="text"
        android:text="Radio"
        app:layout_constraintEnd_toEndOf="@+id/edtAlturaTriangulo"
        app:layout_constraintStart_toStartOf="@+id/edtAlturaTriangulo"
        app:layout_constraintTop_toBottomOf="@+id/txtCirculo" />

</androidx.constraintlayout.widget.ConstraintLayout>